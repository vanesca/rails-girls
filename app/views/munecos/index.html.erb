<h1>Mis muñecos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @munecos.each do |muneco| %>
      <tr>
        <td><%= muneco.name %></td>
        <td><%= muneco.description %></td>
        <td><%= muneco.cost %></td>
        <td><%= muneco.picture %></td>
        <td><%= link_to 'Mostrar', muneco %></td>
        <td><%= link_to 'Editar', edit_muneco_path(muneco) %></td>
        <td><%= link_to 'Eliminar', muneco, method: :delete, data: { confirm: 'Estas tu seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Muñeco', new_muneco_path %>
